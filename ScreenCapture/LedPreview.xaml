<UserControl x:Class="WPFCaptureSample.LedPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFCaptureSample"
             mc:Ignorable="d"
             x:Name="Control">
    <Grid>
        <Rectangle Grid.Column="0"
                   Width="{Binding Size, ElementName=Control, Mode=OneWay}"
                   Height="{Binding Size, ElementName=Control, Mode=OneWay}"
                   Fill="{Binding Color, ElementName=Control, Mode=OneWay}">
            <Rectangle.Effect>
                <BlurEffect Radius="{Binding BlurAmount}" />
            </Rectangle.Effect>
        </Rectangle>
    </Grid>
</UserControl>