<Window x:Class="Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ambiHMD" Height="450" Width="800"
        Loaded="Window_Loaded"
        x:Name="Root">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid x:Name="ControlsGrid" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Margin="10">
                <Grid
                    Margin="0, 10, 0 ,10">

                    <Rectangle
                        Stroke="WhiteSmoke"
                        StrokeThickness="1" />

                    <Label
                        Content="Capture"
                        Margin="0, -15, 0 ,0"/>

                    <StackPanel>
                        <!--Picker-->
                        <Button x:Name="PickerButton" Content="Use Picker" Click="PickerButton_Click" Margin="10" />

                        <!--Window DropDown-->
                        <ComboBox x:Name="WindowComboBox" Margin="10"
                                  SelectionChanged="WindowComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding MainWindowTitle}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!--<Button x:Name="PrimaryMonitorButton" Content="Use Primary Monitor" Click="PrimaryMonitorButton_Click"
                        Margin="10" />-->

                        <!--Monitor DropDown-->
                        <ComboBox x:Name="MonitorComboBox" Margin="10"
                                  SelectionChanged="MonitorComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DeviceName}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <Grid>
                    <Rectangle
                        Stroke="WhiteSmoke"
                        StrokeThickness="1" />

                    <Label
                        Content="Settings"
                        Margin="0, -15, 0 ,0"/>

                    <StackPanel>

                        <!--LEDs per eye input-->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Margin="0, 0, 40, 0"
                                Content="LEDs per Eye:" />
                            <TextBox
                                Grid.Column="1"
                                TextAlignment="Right"
                                VerticalAlignment="Center"
                                Text="{Binding ElementName=Root, Path=LedsPerEye, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <StackPanel>
                            <Label Content="Vertical Sweep" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label
                                    Grid.Column="0"
                                    Content="0%"
                                    HorizontalAlignment="Left" />
                                <Slider
                                    Grid.Column="1"
                                    VerticalAlignment="Center" />
                                <Label
                                    Grid.Column="2"
                                    Content="100%"
                                    HorizontalAlignment="Right" />
                            </Grid>
                        </StackPanel>

                        <StackPanel>
                            <Label Content="Horizontal Sweep" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label
                                    Grid.Column="0"
                                    Content="0%"
                                    HorizontalAlignment="Left" />
                                <Slider
                                    Grid.Column="1"
                                    VerticalAlignment="Center" />
                                <Label
                                    Grid.Column="2"
                                    Content="100%"
                                    HorizontalAlignment="Right" />
                            </Grid>
                        </StackPanel>

                        <StackPanel>
                            <Label Content="LED Preview Blur" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label
                                    Grid.Column="0"
                                    Content="0%"
                                    HorizontalAlignment="Left" />
                                <Slider
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    ValueChanged="BlurSlider_OnValueChanged" />
                                <Label
                                    Grid.Column="2"
                                    Content="100%"
                                    HorizontalAlignment="Right" />
                            </Grid>
                        </StackPanel>

                        <!--Show LED Value checkbox-->
                        <CheckBox Content="Show LED values" Margin="10" />

                    </StackPanel>
                </Grid>

            </StackPanel>
            <Button x:Name="StopButton" Grid.Row="1" Content="Stop Capturing" Click="StopButton_Click" Margin="10" />
        </Grid>

        <Grid Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    x:Name="LeftLeds"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Margin="0, 0, 20, 0" />

                <!--What will become the capture playback-->
                <Rectangle Grid.Column="1" />

                <StackPanel
                    x:Name="RightLeds"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Margin="20, 0, 20, 0" />
            </Grid>
        </Grid>
    </Grid>
</Window>