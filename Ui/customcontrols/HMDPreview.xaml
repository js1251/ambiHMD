<UserControl x:Class="Ui.customcontrols.HMDPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:customcontrols="clr-namespace:Ui.customcontrols"
             mc:Ignorable="d"
             x:Name="Control"
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Rectangle
            Grid.Column="1"
            Fill="{Binding ElementName=Control, Path=PreviewBrush}">
            <Rectangle.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Color="Black"
                    Direction="0"
                    ShadowDepth="0"
                    Opacity="0.5" />
            </Rectangle.Effect>
        </Rectangle>

        <customcontrols:LEDStack
            x:Name="LeftLEDs"
            Grid.Column="0" />

        <customcontrols:LEDStack
            x:Name="RightLEDs"
            Grid.Column="0" />
    </Grid>
</UserControl>